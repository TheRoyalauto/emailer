# Convex
NEXT_PUBLIC_CONVEX_URL=your-convex-deployment-url

# SMTP Configuration (set in Convex dashboard)
# These are read by Convex actions, not Next.js
# SMTP_HOST=mail.privateemail.com
# SMTP_PORT=465
# SMTP_USER=your-email@domain.com
# SMTP_PASS=your-smtp-password
# SMTP_SSL=true

# Application Configuration (set in Convex dashboard)
# API_KEY=your-secure-api-key
# UNSUB_SECRET=your-unsubscribe-signing-secret
# PUBLIC_BASE_URL=https://yourdomain.com
# FROM_NAME=Your Company
# FROM_EMAIL=your-email@domain.com
# PHYSICAL_ADDRESS=123 Main St, City, State 12345

# Rate Limits (set in Convex dashboard)
# MAX_PER_HOUR=100
# MAX_PER_DAY=1000
